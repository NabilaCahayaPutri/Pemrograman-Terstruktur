#include <iostream>
#include <vector>
#include <string>
using namespace std;

bool findWord(vector<string>& matrix, string world){
    int rows = matrix.size();
    int cols = matrix[0].size();

    for (int i = 0; i < rows; i++){
        for (int j = 0; j <= cols - word.length(); j++){
            bool found = true;
            for (int k = 0; k < word.length(); k++){
                if (matrix[i][j + k] != word[k])
                {
                    found = false;
                    break;
                } 
            }
            if (found) return true;
        }
    }
}